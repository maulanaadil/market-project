script.
  if(localStorage.getItem('name') !== '#{user.name}' && localStorage.getItem('username') !== '#{user.username}' && localStorage.getItem('picture') !== '#{user.picture}') {
    localStorage.setItem('name', '#{user.name}');
    localStorage.setItem('username', '#{user.username}');
    localStorage.setItem('picture', '#{user.picture}');
  } else if (localStorage.getItem('name') == null && localStorage.getItem('username') == null && localStorage.getItem('picture') == null) {
    localStorage.setItem('name', '#{user.name}');
    localStorage.setItem('username', '#{user.username}');
    localStorage.setItem('picture', '#{user.picture}');
  }
  document.querySelector('#logout').addEventListener('click', function() {
    localStorage.removeItem('profile');
  })
  
